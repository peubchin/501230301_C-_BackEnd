<div class="content">
  <div class="container-fluid">
    <div class="d-flex justify-content-between mb-3">
      <h4 class="page-title mb-0">Danh sách sản phẩm</h4>
      <a href="/categories/create" class="btn btn-default align-items-center">Thêm</a>
    </div>
    <div class="card">
      <div class="card-body">
        <table class="table table-head-bg-success">
          <thead>
            <tr>
              <th scope="col">STT</th>
              <th scope="col">Image</th>
              <th scope="col">Code</th>
              <th scope="col">Name</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach(function(category,index){%>
              <tr>
                <td><%= index+1 %></td>
                <td>
                  <img src="<%= category.image%>" alt="image" class="category-label">
                </td>
                <td><%= category.code %></td>
                <td><%= category.name %></td>
                <td>
                  <a class="btn btn-primary btn-sm" href="/categories/update/<%= category._id %>">Sửa</a>
                  <a class="btn btn-danger btn-sm" href="/categories/delete/<%= category._id %>">Xóa</a>
                </td>
              </tr>
              <%})%> 
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>