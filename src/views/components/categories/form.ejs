<div class="content">
  <div class="container-fluid">
    <h4 class="page-title">
      <% if(mode==="Create" ){ %>
        Tạo sản phẩm mới
        <% }%>
          <% if(mode==="Update" ){ %>
            Cập nhật sản phẩm
            <% }%>
              <% if(mode==="Delete" ){ %>
                Bạn có đồng ý xóa sản phẩm <%=category?.name%>
                  <% }%>
    </h4>
    <div class="card">
      <div class="card-body">
        <% if(mode==="Create" ){ %>
          <form action="/categories/create" method="post">
          <% }%>
         <% if(mode==="Update" ){ %>
            <form action="/categories/update" method="post">
          <% }%>
        <% if(mode==="Delete" ){ %>
            <form action="/categories/delete" method="post">
              <% }%>
              <div class="form-group hide">
                 <input name="id" type="text" id="id" value="<%=category?._id%>" />
                 </div>
          <div class="form-group">
              <label for="code">Mã loại sản phẩm</label>
              <input name="code" type="text" value="<%= category?.code %>" class="form-control" id="code"
               placeholder="Nhập mã sản phẩm" disabled="<%= mode==='Delete' ? true : false %>" />
            </div>

          <div class="form-group">
            <label for="name">Tên loại sản phẩm</label>
            <input name="name" type="text" class="form-control" id="name" value="<%= category?.name %>"
              placeholder="Nhập tên sản phẩm" disabled="<%= mode==='Delete' ? true : false %>" />
              </div>
          <div class="form-group">
            <label for="image">Link hình ảnh</label>
             <input name="image" type="text" class="form-control" id="image"
                value="<%= category?.image %>" placeholder="Nhập tên hình ảnh"
                disabled="<%= mode==='Delete' ? true:false %>" />
                </div>

          <div class="card-action">
                            <% if(mode==="Create" ){ %>
                              <button class="btn btn-success" type="submit">Tạo</button>
                              <% }%>
                                <% if(mode==="Update" ){ %>
                                  <button class="btn btn-success" type="submit" href="/categories">Cập nhật</button>
                                  <% }%>
                                <% if(mode==="Delete" ){ %>
                                  <button class="btn btn-danger" type="submit" href="/categories">Xóa</button>
                                  <% }%>
                                    <a class="btn btn-primary" href="/categories">Trở về danh sách sản phẩm</a>
                          </div>
                      </form>
      </div>
    </div>
  </div>
</div>